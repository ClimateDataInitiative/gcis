<!DOCTYPE html>
<html>
<head><%= title =%>
%= stylesheet "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css";
%= javascript '/mojo/jquery/jquery.js';
</head>

<body>
<div class='container-fluid'>
<br>
<br>
<br>
% my $destination = ( (param 'destination') || (flash 'destination') || '');
%= form_for 'check_login', method => 'POST', class => "form-horizontal well" => begin
        <legend>
            % if ($destination) {
            Please log in to access this page.
            % } else {
            Log in to the GCIS.
            % }
        </legend>
        % if (my $error = (flash 'error')) {
            <div class='alert alert-error'><%= $error %></div>
        % }

        <div class="control-group">
            <label class="control-label" for="inputUser">User</label>
            <div class="controls">
                <input type="text" id="inputUser" name='user' placeholder="username">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
                <input type="password" id="inputPassword" name='password' placeholder="secret">
            </div>
        </div>
<div class="form-actions">
    %= hidden_field 'destination' => $destination;
    <button type="submit" class="btn btn-primary">Sign in</button>
</div>
%= end

</div>

</body>
</html>


