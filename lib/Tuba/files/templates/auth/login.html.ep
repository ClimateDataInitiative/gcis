<!DOCTYPE html>
<html>
<head><%= title =%>
%= stylesheet "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css";
%= javascript '/mojo/jquery/jquery.js';
</head>

<body>
<div class='container-fluid'>
<br>
<br>
<br>
% my $destination = ( (param 'destination') || (flash 'destination') || '');
% if ($self->app->mode eq 'development') {
<ul class="nav nav-tabs">
<li class='active'><%= link_to 'login' => begin %>google<%= end %></li>
<li><%= link_to url_for('login_pw')->query(destination => (param 'destination')) => begin %>password<%= end %></li>
</ul>
% }

%= form_for 'check_login', method => 'POST', class => "form-horizontal well" => begin
        <legend>
            % if ($destination) {
            Please log in to continue.
            % } else {
            Log in to the GCIS.
            % }

        </legend>
        % if (my $error = (flash 'error')) {
            <div class='alert alert-error'><%= $error %></div>
        % }

        <div class="control-group">
            <label class="control-label" for="inputUser">User</label>
            <div class="controls">
                <input type="text" id="inputUser" name='user' placeholder="email address">
            </div>
        </div>
<div class="form-actions">
    %= hidden_field 'destination' => $destination;
    <button type="submit" class="btn btn-primary">Sign in with your Google account</button>
</div>
%= end

</div>

</body>
</html>


