% layout 'default';

<center>
Searched for <b><%= param 'q' %></b>.
</center>
<br>
% if (@$results==0) {
No search results.
% } else  {
    <table class='table table-condensed table-bordered'>
    % for my $obj (@$results) {
    <tr>
            <td class='span1'><%= $obj->meta->table %></td>
            <td class='row-fluid span11'>
            %= include 'obj_thumbnails', objs => [ $obj ];
            </td>
    </td>
    % }
    </table>
% }
