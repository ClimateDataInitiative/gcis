% layout 'default';
<center>
<h2><%= $object->stringify %></h2>
</center>

% my $controls = stash 'controls' || {};

% my $textfield = begin
    % my $column = shift;
    % my $object = shift;
    % my $accessor = $column->accessor_method_name;
    <input type="text" class="span4" id="<%= $column->name %>" name="<%= $column->name %>" placeholder="<%= $column->type %>" value="<%= $object->$accessor %>">
% end

% my $textarea = begin
    % my $column = shift;
    % my $object = shift;
    % my $accessor = $column->accessor_method_name;
    <textarea rows=7 class="span8" id="<%= $column->name %>" name="<%= $column->name %>" placeholder="<%= $column->type %>"><%= $object->$accessor %></textarea>
% end

<div class='row-fluid'>
%= include 'update_tabs', active => 'fields';
<div class='tab-content'>
%= form_for 'update_'.$meta->table => class => 'form-horizontal well' => begin
% if (my $error = (flash 'error')) {
    <div class='alert alert-error'><%= $error %></div>
% }

% for my $column (sort { $a->name cmp $b->name } $meta->columns) {
% my $required = $column->not_null ? ' required' : "";
        <label class="control-label<%= $required %>" for="<%= $column->name %>"><%= ucfirst $column->name %></label>
        <div class="controls">
            % my $accessor = $column->accessor_method_name;
            % my $val = $object->$accessor;
            % my $name = $column->name;
            % if ($name && $name eq 'report' && (stash 'report_identifier')) {
                %= text_field '_report', class => 'span10', value => current_report->title, disabled => 1
            % } elsif (my $entry = $controls->{$column->name}) {
                % $entry = $self->$entry($object) if ref($entry) eq 'CODE';
                %= include 'controls/'.$entry->{template}, object => $object, column => $column, %{ $entry->{params} || {} }, value => $val;
            % } else {
                % if ($val && length($val) > 50) {
                %= $textarea->($column,$object);
                % } else {
                %= $textfield->($column,$object);
                % }
            % }
            <span class="help-inline">
            %= $column->remarks || ""
            </span>
        </div>
% }
<div class='required_note'>required</div>

<div class="form-actions">
    <button type="submit" class="btn btn-primary">Save changes</button>
    <button type="reset" class="btn">Reset</button>
    <button type="submit" name='delete' value='delete' class="btn btn-danger" onclick='{return confirm("Are you sure?")}'>Delete</button>
</div>

%= end
</div>
</div>

