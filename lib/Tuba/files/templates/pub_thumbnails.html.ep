

% if (stash 'simple') {
    % for my $file ($pub->smallest_file) {
        %= link_to "show_".$meta->table, { $meta->table.'_identifier' => $pub->to_object->identifier } => class => "thumbnail" => begin
        %= image $file->thumbnail_path, class => 'img-thumbnail img-responsive', style => 'padding:0px;width:160px;'
        %= end
    % }
% } elsif (stash 'files') {
<ul class='thumbnails'>
%   for my $file ($pub->smallest_file) {
    <li class='thumbnail'>
    %= link_to 'show_file', { file_identifier => $file->identifier } => begin
    %= image $file->thumbnail_path, class => 'img-thumbnail img-responsive' => style => 'padding:0px;';
    %= end
    % my $obj = $pub->to_object($self);
    <div class='caption centered'>
    %= obj_link($file)
    </div>
    </li>
% }
</ul>

% } else {
<ul class='thumbnails'>
%   for my $file ($pub->smallest_file) {
    <li class='thumbnail'>
    %= link_to 'show_file', { file_identifier => $file->identifier } => begin
    %= image $file->thumbnail_path, class => 'img-thumbnail img-responsive' => style => 'padding:0px;';
    %= end
    % my $obj = $pub->to_object($self);
    <div class='caption centered'>
    %= link_to  $obj->uri($self) => class => 'btn btn-default squeezevert' => begin
    %= $obj->stringify;
    %= end
    </div>
    </li>
% }
</ul>
% }
