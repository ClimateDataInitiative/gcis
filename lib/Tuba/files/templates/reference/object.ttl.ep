% layout 'default';

<<%= current_resource %>>
   a gcis:Reference;
   a biro:BibliographicRecord;
   a co:Set;
   a frbr:Work;
   dcterms:identifier "<%= $reference->identifier %>" ;
% if (my $child = $reference->child) {
    <<%= current_resource %>> biro:references <<%= uri($child) %>> ;
% }
% if (my $parent = $reference->parent) {
    <<%= current_resource %>> biro:references <<%= uri($parent) %>> .
% }

