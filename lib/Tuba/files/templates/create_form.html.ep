% layout 'default';

<div class="row-fluid">

%= form_for 'create_'.$meta->table => class => 'form-horizontal well' => begin

<legend>New <%= $meta->table %></legend>

% if (my $error = (flash 'error')) {
    <div class='alert alert-error'><%= $error %></div>
% }

% for my $column (sort { $a->name cmp $b->name } $meta->columns) {
% my $required = $column->not_null ? ' required' : "";
    <div class="control-group">
        <label class="control-label<%= $required %>" for="<%= $column->name %>"><%= ucfirst $column->name %></label>
        <div class="controls">
            <input type="text" class="span4" id="<%= $column->name %>" name="<%= $column->name %>" placeholder="<%= $column->type %>">
            <span class="help-inline">
            %= $column->remarks || ""
            </span>
    </div>
% }
<div class='required_note'>required</div>

<div class="form-actions">
    <button type="submit" class="btn btn-primary">Create new <%= $meta->table %></button>
</div>

%= end

</div>

